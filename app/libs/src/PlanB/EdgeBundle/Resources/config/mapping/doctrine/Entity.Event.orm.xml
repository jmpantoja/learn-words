<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="PlanB\Edge\Domain\Entity\Event" table="events_store"
            repository-class="PlanB\Edge\Infrastructure\Doctrine\Repository\EventStore">

        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>

        <field name="name"/>
        <field name="event" length="512"/>
        <field name="date" type="datetime_immutable"/>
    </entity>

</doctrine-mapping>

