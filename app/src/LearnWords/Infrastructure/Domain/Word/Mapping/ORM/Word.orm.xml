<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="LearnWords\Domain\Word\Word" table="words">

        <id name="id" column="id" type="WordId"/>
        <field name="word"/>
        <field name="lang" type="lang" length="20"/>

        <unique-constraints>
            <unique-constraint columns="word,lang"></unique-constraint>
        </unique-constraints>

        <one-to-many field="questions" target-entity="LearnWords\Domain\Word\Question" mapped-by="word"
                     orphan-removal="true">
            <order-by>
                <order-by-field name="id"/>
            </order-by>
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

        <many-to-many field="tags" target-entity="LearnWords\Domain\Word\Tag" inversed-by="words">
            <join-table name="word_x_tags">
                <join-columns>
                    <join-column/>
                </join-columns>
                <inverse-join-columns>
                    <join-column/>
                </inverse-join-columns>
            </join-table>
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-many>

    </entity>
</doctrine-mapping>
