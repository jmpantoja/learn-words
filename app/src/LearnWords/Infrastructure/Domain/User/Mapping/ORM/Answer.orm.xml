<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="LearnWords\Domain\User\Answer" table="answers">

        <id name="id" column="id" type="AnswerId"/>

        <field name="leitner" type="Leitner"/>
        <field name="totalFailures" type="integer"/>
        <field name="totalSuccess" type="integer"/>
        <field name="average" type="float" />
        <field name="lastDate" type="date_immutable" nullable="true"/>
        <field name="nextDate" type="date_immutable"/>
        <field name="next" type="integer"/>

        <many-to-one field="user" target-entity="LearnWords\Domain\User\User"/>
        <many-to-one field="question" target-entity="LearnWords\Domain\Dictionary\Question"/>

    </entity>
</doctrine-mapping>
