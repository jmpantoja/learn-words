<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="LearnWords\Domain\Dictionary\Entry" table="entries">

        <id name="id" column="id" type="EntryId"/>
        <embedded name="word" class="LearnWords\Domain\Dictionary\Word" use-column-prefix="false"/>

        <unique-constraints>
            <unique-constraint columns="word,lang"></unique-constraint>
        </unique-constraints>

        <field name="mp3Url" type="Mp3Url" length="512" nullable="true"/>
        <one-to-many field="questions" target-entity="LearnWords\Domain\Dictionary\Question" mapped-by="entry"
                     orphan-removal="true">
            <cascade>
                <cascade-persist/>
            </cascade>
            <order-by>
                <order-by-field name="id"/>
            </order-by>

        </one-to-many>

        <many-to-many field="tags" target-entity="LearnWords\Domain\Dictionary\Tag" inversed-by="entries">
            <cascade>
                <cascade-persist/>
            </cascade>
            <join-table name="word_x_tags">
                <join-columns>
                    <join-column/>
                </join-columns>
                <inverse-join-columns>
                    <join-column/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>
</doctrine-mapping>
