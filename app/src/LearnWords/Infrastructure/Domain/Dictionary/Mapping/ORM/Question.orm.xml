<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="LearnWords\Domain\Dictionary\Question" table="questions" inheritance-type="JOINED">

        <discriminator-column name="type" type="string"/>
        <discriminator-map>
            <discriminator-mapping value="vocabulary" class="LearnWords\Domain\Dictionary\Vocabulary"/>
            <discriminator-mapping value="irregular" class="LearnWords\Domain\Dictionary\Irregular"/>
        </discriminator-map>

        <id name="id" column="id" type="QuestionId"/>
        <many-to-one field="entry" target-entity="LearnWords\Domain\Dictionary\Entry">
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-one>
        <field name="random" type="integer" nullable="true"/>
    </entity>
</doctrine-mapping>
